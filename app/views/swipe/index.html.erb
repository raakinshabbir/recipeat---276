<swiper-container
  direction="horizontal"
  loop="false"
  slides-per-view="1"
  navigation="false"
  pagination="false"
  style="--swiper-navigation-color: #333; --swiper-pagination-color: #333; width: 100%; max-width: 600px; margin: 0 auto;"
  keyboard="true"
  #allow-slide-prev="false"
  effect="cards"
>
  <!-- Loop through filtered recipes and display each one as a swiper slide -->
  <% @recipes.each do |recipe| %>
    <swiper-slide style="padding: 60px; border: 3px solid #ccc; border-radius: 16px; background-color: #f9f9f9;" data-recipe-id="<%=recipe.id %>"> 
      <!-- Recipe Title -->
      <h2 style="color: #2c3e50;"><%= recipe.title %></h2>

      <!-- Recipe Image -->
      <div style="text-align: center;">
        <img src="<%= recipe.image_url %>" alt="<%= recipe.title %>" style="width: 100%; max-width: 500px; border-radius: 12px; margin-bottom: 20px;">
      </div>
     
      <!-- Recipe Details -->
      <div style="margin-top: 10px;">
        <strong>Ingredients:</strong>
        <p style="font-size: 14px; color: #555;"><%= recipe.ingredients %></p>

        <strong>Instructions:</strong>
        <div style="font-size: 14px; color: #555;">
          <%= recipe.instructions.split(".").map { |line| "<p>#{line.strip}</p>" }.join.html_safe %>
        </div>

        <div style="display: flex; justify-content: space-between; margin-top: 10px;">
          <!-- Cooking Time -->
          <div style="text-align: left;">
            <strong>Cooking Time:</strong>
            <p><%= recipe.cooking_time %></p>
          </div>
          <!-- Servings -->
          <div style="text-align: center;">
            <strong>Servings:</strong>
            <p><%= recipe.servings %></p>
          </div>
          <!-- Difficulty -->
          <div style="text-align: right;">
            <strong>Difficulty:</strong>
            <p><%= recipe.difficulty %></p>
          </div>
        </div>
      </div>

      <!-- Feedback Overlays with Emojis -->
      <div class="feedback-overlay like">✅</div>
      <div class="feedback-overlay dislike">❌</div>

    </swiper-slide>
  <% end %>
</swiper-container>

<!-- Include Swiper Web Component JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>


