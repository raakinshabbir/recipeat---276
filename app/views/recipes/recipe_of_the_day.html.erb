<h1>Recipe of the Day</h1>

<div id="recipe-container">
  <% if @recipe_of_the_day %>
    <div class="recipe-card" style="padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9; margin-top: 20px;">
      <h2 style="color: #2c3e50;"><%= @recipe_of_the_day.title %></h2>

      <p><strong>Ingredients:</strong> <%= @recipe_of_the_day.ingredients || 'Not specified' %></p>

      <p><strong>Instructions:</strong> <%= @recipe_of_the_day.instructions || 'Not specified' %></p>

      <p><strong>Cooking Time:</strong> <%= @recipe_of_the_day.cooking_time || 'Not specified' %> minutes</p>

      <p><strong>Servings:</strong> <%= @recipe_of_the_day.servings || 'Not specified' %></p>

      <p><strong>Difficulty:</strong> <%= @recipe_of_the_day.difficulty ? @recipe_of_the_day.difficulty.capitalize : 'Not specified' %></p>
    </div>
  <% else %>
    <p>No recipe of the day is available at the moment. Please check back later!</p>
  <% end %>
</div>
