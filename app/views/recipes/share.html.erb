<h1>Share Your Favorite Recipes</h1>
<ul>
  <% @recipes.each do |recipe| %>
    <li>
      <strong><%= recipe.title %></strong>
      <!-- Mailto link for sharing the recipe via email -->
      <a href="mailto:?subject=Recipe: <%= recipe.title %>&body=Check out this recipe!%0D%0A%0D%0ARecipe: <%= recipe.title %>%0D%0AIngredients:%0D%0A<%= recipe.ingredients %>%0D%0AInstructions:%0D%0A<%= recipe.instructions %>" target="_blank">
        Share Recipe
      </a>
    </li>
  <% end %>
</ul>
