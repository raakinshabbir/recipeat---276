<!-- app/views/devise/sessions/new.html.erb -->

<div class="container vh-100 d-flex justify-content-center align-items-center">
  <div class="row w-100">
    <div class="col-md-6 col-lg-4 mx-auto">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Log In</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter your email" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter your password" %>
            </div>

            <!-- Remove the Remember me checkbox -->
            <%# if devise_mapping.rememberable? %>
            <%#   <div class="mb-3 form-check"> %>
            <%#     <%= f.check_box :remember_me, class: "form-check-input" %> 
            <%#     <%= f.label :remember_me, class: "form-check-label" %> 
            <%#   </div> %>
            <%# end %>

            <div class="d-grid">
              <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
